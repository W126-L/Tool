#!tag = 阿旺の库

[Argument]
time = input,"01 8/20 * * *",tag=定时推送
arg1 = switch,true,tag=国际金价
arg2 = switch,true,tag=上海金价
arg3 = switch,true,tag=实物金价

[Script]
//定时获取随机视频推送
cron {time} script-path=https://raw.githubusercontent.com/W126-L/Tool/master/Scripts/Gold.js, timeout=60, tag=实时金价, img-url=https://raw.githubusercontent.com/W126-L/Tool/main/IconSet/108px/VIP.png, argument=[{arg1},{arg2},{arg3}]