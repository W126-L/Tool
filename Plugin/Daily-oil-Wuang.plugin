#!name = 每日油价-Wuang°-山西版
#!desc = 定时获取指定地区油价，*tips*:*注意*:山西地区(shanxi/市区)，陕西地区(shanxi-3/市区)，参数优先级自上而下
#!author = 墨-@wuang [https://github.com/W126-L]
#!homepage = https://github.com/W126-L
#!openUrl = https://raw.githubusercontent.com/W126-L/Tool/master/Plugin/Daily-oil-Wuang.plugin
#!icon = https://raw.githubusercontent.com/W126-L/Tool/main/IconSet/108px/Youjia.png
#!tag = 阿旺の库

[Argument]
arg1 = select, "自定义选择地区", "临汾汽油价格", "大同汽油价格", "朔州汽油价格", "忻州汽油价格", "太原汽油价格", "晋中汽油价格", "阳泉汽油价格", "吕梁汽油价格", "长治汽油价格", "晋城汽油价格", "运城汽油价格", tag=山西地区, desc=这是一个选择类型的参数说明
arg2 = select,"自定义选择直辖市", "北京油价", "上海油价", "天津油价", "重庆油价", tag=直辖市(京-沪-津-渝), desc=这是一个选择类型的参数说明
arg3 = input, "省份/市区-拼音形式", tag=(自定义地区), desc=地区选择自定义时生效
arg4 = input, "0 1 0 * * *", tag=获取油价任务时间

[script]
cron {arg4} script-path=https://raw.githubusercontent.com/W126-L/Tool/master/Scripts/Meiriyoujia.js, timeout=120, tag=每日油价, img-url=https://raw.githubusercontent.com/W126-L/Tool/main/IconSet/Youjia.png, argument=[{arg1},{arg2},{arg3}]
